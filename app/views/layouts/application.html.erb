<!DOCTYPE html>
<html>
  <head>
    <title>Yormie</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>
	  <nav class="navbar navbar-inverse">
	  	<div class="container-fluid">
	    	
	    	<ul class="nav navbar-nav">
	    	<div class="navbar-header">
	    		<%=link_to "Yormie",  products_path, class: "navbar-brand", id:"logo" %>
	    	</div>
	      	<li><%= link_to "Register", new_user_registration_path, id:"register" %></li>
	      	<li><%= link_to "Login", new_user_session_path, id:"login" %></li>
	      	<li><%= link_to "Logout", destroy_user_session_path, :method => :delete, id:"login" %></li>

	       </ul>
	  	</div>
		</nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <%= yield %>
  </body>
</html>
